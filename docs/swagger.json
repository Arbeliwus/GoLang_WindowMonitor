{
    "swagger": "2.0",
    "info": {
        "description": "裝置/房間狀態管理 API（devices/rooms state management api）",
        "title": "Smart Home API (smart home api)",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/ping": {
            "get": {
                "description": "回傳 pong（return pong）",
                "tags": [
                    "health"
                ],
                "summary": "Ping 測試（ping test）",
                "responses": {
                    "200": {
                        "description": "pong",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "rooms"
                ],
                "summary": "列出所有房間（list all rooms）",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": true
                            }
                        }
                    }
                }
            }
        },
        "/rooms/devices/state": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "rooms"
                ],
                "summary": "查詢房間內裝置狀態",
                "parameters": [
                    {
                        "type": "string",
                        "description": "房間名稱 (room name)",
                        "name": "room_name",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "房間 IDs (逗號分隔)",
                        "name": "ids",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": true
                            }
                        }
                    }
                }
            }
        }
    }
}